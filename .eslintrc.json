{
    "extends": "airbnb",
    "env": {
        "jest": true,
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": [
                    "./src",
                    "./node_modules"
                ]
            }
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["off", "double"],
        "indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "eol-last": ["off", "always"],
        "react/jsx-indent": ["warning", "tab"],
        "camelcase": 1,
        "no-console": 0,
        "comma-dangle": 0,
        "no-underscore-dangle": 0,
        "react/jsx-filename-extension": 0
    }
}